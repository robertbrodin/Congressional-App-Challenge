<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout">

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeScreenActivity"
    android:background="@color/blueTheme">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/blueThemeTint"
        android:layout_marginTop="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@color/cranberryTheme"
            android:paddingTop="2dp"
            android:paddingBottom="2dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register to Vote!"
            android:textSize="35dp"
            android:textColor="@color/white"
            android:textStyle="bold"/>

        </LinearLayout>
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/blueThemeTint"
            android:layout_marginTop="60dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="23dp"
                android:textColor="@color/white"
                android:text="Not sure if you're eligible to vote? Take the voter eligibility quiz!"/>

            <Button
                android:layout_width="170dp"
                android:layout_height="75dp"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:onClick="onHomeButtonClick"
                android:id="@+id/quiz_button"
                android:text="Click here!"
                android:textColor="@color/white"
                android:background="@drawable/buttonstyle"
                android:textSize="18sp"/>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/blueThemeTint"
            android:layout_marginTop="250dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="23dp"
            android:textColor="@color/white"
            android:text="Know that you're eligible? Click the button to register online now!"
            />
        <Button
            android:layout_width="150dp"
            android:layout_height="75dp"
            android:layout_marginTop="10dp"
            android:onClick="onHomeButtonClick"
            android:layout_centerHorizontal="true"
            android:id="@+id/link_to_web"
            android:text="Register!"
            android:textColor="@color/white"
            android:background="@drawable/buttonstyle"
            android:textSize="18sp"/>

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navview_home"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/cranberryTheme"
        app:itemTextColor="@color/white"
        app:menu="@menu/drawer_view">
    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>
