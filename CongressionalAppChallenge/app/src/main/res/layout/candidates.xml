<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/drawer_layout">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteTheme"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/candidatesText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            android:text="@string/candidates"
            android:textColor="@color/redTheme"
            android:textSize="55sp"
            android:textAllCaps="true"
            android:textStyle="bold"/>

        <ImageButton
            android:id="@+id/bakerPic"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:contentDescription="@string/charlie_baker"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitCenter"
            android:src="@mipmap/baker"
            android:onClick="onClickCandidate"/>

        <TextView
            android:id="@+id/bakerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/charlie_baker"
            android:paddingBottom="30dp"
            android:textColor="@color/blueTheme"
            android:textSize="45sp" />

        <ImageButton
            android:id="@+id/politoPic"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:contentDescription="@string/karyn_polito"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitCenter"
            android:src="@mipmap/polito"
            android:onClick="onClickCandidate"/>

        <TextView
            android:id="@+id/politoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/karyn_polito"
            android:textSize="45sp"
            android:textColor="@color/blueTheme"
            android:paddingBottom="30dp"/>

        <ImageButton
            android:id="@+id/gonzalezPic"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/jay_gonzalez"
            android:scaleType="fitCenter"
            android:src="@mipmap/gonzalez" />

        <TextView
            android:id="@+id/gonzalezText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/jay_gonzalez"
            android:textSize="45sp"
            android:textColor="@color/blueTheme"
            android:paddingBottom="30dp"/>

        <ImageButton
            android:id="@+id/palfreyPic"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/palfrey"
            android:scaleType="fitCenter"
            android:src="@mipmap/palfrey" />

        <TextView
            android:id="@+id/palfreyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/palfrey"
            android:textSize="45sp"
            android:textColor="@color/blueTheme"
            android:paddingBottom="30dp"/>

    </LinearLayout>
</ScrollView>

    <android.support.design.widget.NavigationView
        android:id="@+id/navview_home"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/cranberryTheme"
        app:itemTextColor="@color/white"
        app:menu="@menu/drawer_view">
    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>
