<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/drawer_layout">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blueTheme"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/blueThemeTint"
            android:layout_marginTop="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/redrectangle"
                android:orientation="vertical"
                android:padding="5dp"
                >

                <TextView
                    android:id="@+id/titleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="35sp"
                    android:textStyle="bold"
                    android:text="Candidates"
                    android:textColor="#fff"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/titleDescriptionTextView"
                android:layout_width="353dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Candidates for the Gubernatorial and Senate races!"
                android:textColor="#fff"
                android:textSize="15sp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blueThemeTint"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="To find out about the ballot questions, click the button below!"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="10dp"
                />

            <Button
                android:id="@+id/ballotButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Click here!"
                android:background="@drawable/buttonstyle"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:onClick="onClickCandidate"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@color/blueThemeTint"
            android:layout_marginTop="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@color/cranberryTheme"
                android:paddingTop="2dp"
                android:paddingBottom="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gubernatorial Candidates"
                    android:textSize="25dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cranberryTheme"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:layout_marginTop="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/blueThemeTint">

            <ImageButton
                android:id="@+id/bakerPic"
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:contentDescription="@string/charlie_baker"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitCenter"
                android:src="@mipmap/baker"
                android:onClick="onClickCandidate"
                android:layout_marginTop="15dp"/>

            <TextView
                android:id="@+id/bakerText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/charlie_baker"
                android:paddingBottom="30dp"
                android:textColor="@color/white"
                android:textSize="45sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lightBlueTheme"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/blueThemeTint"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

            <ImageButton
                android:id="@+id/gonzalezPic"
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@string/jay_gonzalez"
                android:scaleType="fitCenter"
                android:src="@mipmap/gonzalez"
                android:onClick="onClickCandidate"
                android:layout_marginTop="15dp"/>

            <TextView
                android:id="@+id/gonzalezText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/jay_gonzalez"
                android:textSize="45sp"
                android:textColor="@color/white"
                android:paddingBottom="30dp"/>

            </LinearLayout>

        </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@color/blueThemeTint"
                android:layout_marginTop="15dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:background="@color/cranberryTheme"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Senate Candidates"
                        android:textSize="25dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"/>

                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/lightBlueTheme"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:layout_marginTop="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@color/blueThemeTint">

                    <ImageButton
                        android:id="@+id/warrenPic"
                        android:layout_width="220dp"
                        android:layout_height="220dp"
                        android:contentDescription="@string/elizabeth_warren"
                        android:layout_gravity="center_horizontal"
                        android:scaleType="fitCenter"
                        android:src="@mipmap/baker"
                        android:onClick="onClickCandidate"
                        android:layout_marginTop="15dp"/>

                    <TextView
                        android:id="@+id/warrenText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/elizabeth_warren"
                        android:paddingBottom="30dp"
                        android:textColor="@color/white"
                        android:textSize="45sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/cranberryTheme"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/blueThemeTint"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">

                    <ImageButton
                        android:id="@+id/republicanPic"
                        android:layout_width="220dp"
                        android:layout_height="220dp"
                        android:layout_gravity="center_horizontal"
                        android:contentDescription="@string/jay_gonzalez"
                        android:scaleType="fitCenter"
                        android:src="@mipmap/gonzalez"
                        android:layout_marginTop="15dp"/>

                    <TextView
                        android:id="@+id/republicanText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/jay_gonzalez"
                        android:textSize="45sp"
                        android:textColor="@color/white"
                        android:paddingBottom="30dp"/>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>



    </LinearLayout>
</ScrollView>

    <android.support.design.widget.NavigationView
        android:id="@+id/navview_home"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/cranberryTheme"
        app:itemTextColor="@color/white"
        app:menu="@menu/drawer_view">
    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>
