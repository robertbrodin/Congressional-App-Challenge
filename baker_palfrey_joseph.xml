<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/drawer_layout">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blueTheme"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/jay_gonzalez"
                android:textColor="@color/redTheme"
                android:textStyle="bold"
                android:textSize="55sp"/>

            <ImageView
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:src="@mipmap/gonzalez"
                android:layout_gravity="center_horizontal"
                android:paddingTop="40dp"
                android:contentDescription="@string/gonzalezpic"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="30dp"
                android:layout_gravity="center_horizontal"
                android:textSize='20sp'
                android:textColor="@color/whiteTheme"
                android:text="@string/gonzalezprofile1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:layout_gravity="center_horizontal"
                android:textSize='20sp'
                android:textColor="@color/whiteTheme"
                android:text="@string/gonzalezprofile2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:layout_gravity="center_horizontal"
                android:textSize='20sp'
                android:textColor="@color/whiteTheme"
                android:text="@string/gonzalezprofile3"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:layout_gravity="center_horizontal"
                android:textSize='20sp'
                android:textColor="@color/whiteTheme"
                android:text="@string/gonzalezprofile4"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:layout_gravity="center_horizontal"
                android:textSize='20sp'
                android:textColor="@color/whiteTheme"
                android:text="@string/gonzalezprofile5"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:layout_gravity="center_horizontal"
                android:textSize='20sp'
                android:textColor="@color/whiteTheme"
                android:text="@string/gonzalezmoreinfo"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/ltgovernor"
                android:textColor="@color/redTheme"
                android:textStyle="bold"
                android:textSize="55sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/quentin_palfrey"
                android:textColor="@color/redTheme"
                android:textStyle="bold"
                android:textSize="45sp"/>

            <ImageView
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:src="@mipmap/palfrey"
                android:layout_gravity="center_horizontal"
                android:paddingTop="40dp"
                android:contentDescription="@string/quentin_palfrey"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:layout_gravity="center_horizontal"
                android:textSize='20sp'
                android:textColor="@color/whiteTheme"
                android:text="@string/palfreyprofile1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:layout_gravity="center_horizontal"
                android:textSize='20sp'
                android:textColor="@color/whiteTheme"
                android:text="@string/palfreyprofile2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:layout_gravity="center_horizontal"
                android:textSize='20sp'
                android:textColor="@color/whiteTheme"
                android:text="@string/palfreyprofile3"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:layout_gravity="center_horizontal"
                android:textSize='20sp'
                android:textColor="@color/whiteTheme"
                android:text="@string/palfreyprofile4"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:layout_gravity="center_horizontal"
                android:textSize='20sp'
                android:textColor="@color/whiteTheme"
                android:text="@string/palfreyprofile5"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:layout_gravity="center_horizontal"
                android:textSize='20sp'
                android:textColor="@color/whiteTheme"
                android:text="@string/palfreyprofile6"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:layout_gravity="center_horizontal"
                android:textSize='20sp'
                android:textColor="@color/whiteTheme"
                android:text="@string/palfreymoreinfo"/>

        </LinearLayout>
    </ScrollView>

    <android.support.design.widget.NavigationView
        android:id="@+id/navview_candidates"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/blueTheme"
        app:itemTextColor="@color/white"
        app:menu="@menu/drawer_view">
    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>
